section#mv
  .inner

section#users
  .inner
    .users-search
      / 検索ボックス
    .users-body
      ul.users-body-switch
        li Favorites
        li Weight
      
      table.users-table
        thead.users-table-head
          tr
            th Name
            th Last Weight
            th 1w Change
            th BMI
            th Date
            th Goal
        
        tbody.users-table-body
          - @users.each do |user|
            tr id="user-#{user.id}"
                td= link_to user.name, user
        /       td= @change
        /       td= @bmi
        /       td= user.created_at
        /       td= user.user.goal
        /       td= link_to user.user.name, '#'

  - if current_user
    .record-btn 
      = link_to "+", new_record_path